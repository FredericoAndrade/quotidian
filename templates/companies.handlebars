<div class="companies">
  <div class="content">
    {{!-- <p class="bodyCopy">Quotidian works with companies poised to transform their industries through experience and expertise.</p> --}}
    <ul>
      {{#each}}
        {{#if live}}
          <li class="company">
            <div class="wrapper">
              <a {{bind-attr href="url"}} class="link">
                {{#if acquired}}
                  <div class="acquired"><p>Acquired</p></div>
                {{/if}}
                {{#if photo}}
                  <div class="companyLogo" {{bind-attr style='photoUrl'}}></div>
                {{/if}}
                <span class="info">
                  <p><b>{{name}}</b></p>
                  <p class="companyLocation">{{location}}</p>
                  {{#if acquired}}
                    <p class="acquiredBy">Acquired by {{acquired}}</p>
                  {{/if}}
                </span>
              </a>
              <span class="social">
                <ul>
                  <li><a {{bind-attr href="twitter"}} class="twitter"></a></li>
                  <li><a {{bind-attr href="angelList"}} class="angelList"></a></li>
                </ul>
              </span>
            </div>
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>