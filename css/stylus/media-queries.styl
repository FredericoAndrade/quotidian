@media only screen and (max-device-width: 480px)

  $i = !important

  body
    padding 0 $i

    nav
      padding 0 $i

      .mobileTop
        float left
        display inline-block
        border-bottom 1px solid #eee
        box-shadow 0 1px 2px rgba(0,0,0,0.1)

        a.logo
          width 80%
          margin 1em 0
          float left

          img
            &.pinwheel, &.logoType
              display none

            &.phoneLogo
              width 90%
              margin .4em auto
              display block $i

        .mobileNav
          display block $i
          float left
          height 7em
          width 20%
          margin 3.2em 0 0
          border none
          background-color transparent
          background-image url('../images/icons/menu.png')
          background-size 40px
          background-repeat no-repeat
          background-position center

      ul.headerNav
        background-color #fafafa
        float left
        width 100%
        height 0px
        overflow hidden
        transition height .2s ease-in-out

        &.open
          height 189px
          padding-bottom .5em
          box-shadow inset 0 -1px 2px rgba(0,0,0,0.05)

        li
          width 100%

          a
            font-weight 300
            width 100%
            padding 1em 0
            text-align center

    footer
      ul
        width 100%

        &.org
          border-bottom 1px solid #eee

        li
          width 100%

          a
            box-sizing content-box
            padding 1em 0
            line-height 40px
            font-size 1.2em
            text-align center
            width 100%

    $rows = 1
    $company-width = (100 / $rows)%

    .companies
      .content
        ul
          li.company
            width $company-width
            .wrapper
              height 67.5vw

              .link
                .quotidian-logo
                  height 9vw

                span
                  opacity 1

                  &.info
                    p
                      font-size 1.5em
